<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Name Cloud Marker</title>
        <link href="Images/favicon.ico" rel="shortcut icon" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="~/Content/foundation.css" rel="stylesheet" />   
        <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900|Concert+One|The+Girl+Next+Door|Patrick+Hand+SC|Londrina+Shadow' rel='stylesheet' type='text/css'>
        @Styles.Render("~/Content/css")
        <link href="~/Content/jquery.bxslider.css" rel="stylesheet" />
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/modernizr")
        <script src="~/Scripts/plugins/jquery.easing.1.3.js"></script>
        <script src="~/Scripts/jquery.bxslider.min.js"></script>
        
    </head>
    <body>
        
<div id="wrapper">

            <header>  
                @*<div class="fixed">*@
                <nav class="top-bar" data-topbar>
                    <ul class="title-area">
                        <li class="name">
                            <h1>@Html.ActionLink("Cloud Marker", "Index", "Home")</h1>
                        </li>
                        <li class="toggle-topbar menu-icon"><a href="#"></a></li>
                    </ul>

                    <section class="top-bar-section">
                    <ul class="right">
                        <li>@Html.ActionLink("My Cloud Markers","Index","bookmark")</li>
                        <li>@Html.ActionLink("Stats", "Stats", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    </section>
                </nav>
                @*</div>*@

                <a href='@Url.Action("Index", "Home")'><img id="logo" src="~/Images/logo-orange.png" /></a>
            </header>

            
    <section id="content">
        <div class="row">
            @* Content goes here *@
            @RenderBody()
        </div>
    </section>

    <div class="row">
            <footer>
                <nav class="footer">
                        <div class="large-6 medium-6 small-12 columns fnav">
                        @Html.ActionLink("Help", "Help", "Home")
                        @Html.ActionLink("Privacy", "Privacy", "Home")
                        @Html.ActionLink("Terms", "Terms", "Home")
                        @Html.ActionLink("Logout", "Logout")
                        </div>
                        <div class="large-6 medium-6 small-12 columns social">
                        <a href="http://www.facebook.com"><img src="~/Images/fb-bl.png" /></a>
                        <a href="http://www.twitter.com"><img src="~/Images/twitter-bl.png" /></a>
                        </div>
                        <div class="large-12 medium-12 small-12 columns copy">
                        <span>&copy; 2014 Danielle Stirling & Stacey Masson</span>
                        </div>
                </nav>
            </footer>
        </div>


        </div>


        
      
        <script src="~/Scripts/foundation.min.js"></script>
        <script>
            $(document).foundation();
        </script>
        @RenderSection("scripts", required: false)
    </body>
</html>
